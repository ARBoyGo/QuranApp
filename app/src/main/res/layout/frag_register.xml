<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="20dp"
    android:orientation="vertical">

    <com.quranapp.android.widgets.form.PeaceFormInputField
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        app:PeaceFFHint="@string/strFieldHintFName"
        app:PeaceFFTitle="@string/strFieldTitleFName" />

    <com.quranapp.android.widgets.form.PeaceFormInputField
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        app:PeaceFFHint="@string/strFieldHintLName"
        app:PeaceFFTitle="@string/strFieldTitleLName" />

    <com.quranapp.android.widgets.form.PeaceFormInputField
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        app:PeaceFFHint="@string/strFieldHintEmail"
        app:PeaceFFTitle="@string/strFieldTitleEmail" />

    <com.quranapp.android.widgets.form.PeaceFormInputField
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        app:PeaceFFHint="@string/strFieldHintNewPassword"
        app:PeaceFFTitle="@string/strFieldTitlePassword" />

    <com.quranapp.android.widgets.form.PeaceFormInputField
        android:id="@+id/cpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        app:PeaceFFHint="@string/strFieldHintCPassword"
        app:PeaceFFTitle="@string/strFieldTitleCPassword" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/submit"
        style="@style/ButtonAction"
        android:layout_marginTop="25dp"
        android:width="150dp"
        android:text="@string/strLabelRegister" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/privacyLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/strTitlePrivacyPolicy"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dmnCommonSize2"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loginRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/dmnCommonSize2" />
</LinearLayout>
