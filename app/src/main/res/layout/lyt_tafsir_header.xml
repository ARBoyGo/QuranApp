<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingTop="25dp"
    android:paddingBottom="15dp"
    app:layout_scrollFlags="scroll|exitUntilCollapsed">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tafsirTitle"
        style="@style/TextAppearanceCommonTitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        tools:text="Tafsir Ibn Kathir" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/versePreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/dr_bg_reader_verse_action"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="22sp"
        tools:fontFamily="@font/indopak"
        tools:text="@string/strScriptPreviewIndopak" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goToVerse"
        style="@style/ButtonAction"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Go to verse" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/btnPrevVerse"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_action_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/prevVerseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-medium"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="@dimen/dmnCommonSize2_5" />


            <com.quranapp.android.widgets.IconedTextView
                android:id="@+id/textPrevTafsir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Previous Tafsir"
                android:textColor="@color/colorIcon"
                android:textSize="@dimen/dmnCommonSize3_5"
                app:drawableStartDimen="16dp"
                app:drawableTint="@color/colorIcon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNextVerse"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_action_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nextVerseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-medium"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="@dimen/dmnCommonSize2_5" />


            <com.quranapp.android.widgets.IconedTextView
                android:id="@+id/textNextTafsir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Next Tafsir"
                android:textColor="@color/colorIcon"
                android:textSize="@dimen/dmnCommonSize3_5"
                app:drawableStartDimen="16dp"
                app:drawableTint="@color/colorIcon" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>